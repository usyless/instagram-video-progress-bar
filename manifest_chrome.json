{
    "manifest_version": 3,
    "name": "Reels Progress Bar",
    "version": "0.1",
    "author": "usy",
    "homepage_url": "https://github.com/usyless/instagram-reels-progress-bar",
  
    "description": "Adds progress bar to Instagram reels",
  
    "icons": {
      "96": "icons/icon-96.png"
    },

    "content_scripts": [
      {
        "matches": ["https://www.instagram.com/reels/*"],
        "js": ["reels.js"],
        "css": ["reels.css"],
        "run_at": "document_idle"
      }
    ]
}